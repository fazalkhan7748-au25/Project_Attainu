extends base

block content
    main.main
        
        .card-container
            each x in Products 
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src='/img/tour-2-1.jpg', alt='Tour 1')
                        h3.heading-tertirary
                            span=x.name

                    .card__details
                        h2.card__sub-heading 
                            h1=`Price$${x.price},`                       
                        p.card__text=`Email:${x.description} `
  
                    .card__footer
                        a.btn.btn--green.btn--small(href=`/index/product/${x.slug}`) Details   
